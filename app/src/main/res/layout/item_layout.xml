<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginEnd="25dp">

    <LinearLayout
        android:layout_width="172dp"
        android:layout_height="175dp"
        android:background="@drawable/item_container"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/pubg_250uc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/font_bruno"
                android:gravity="center"
                android:text="250 UC"
                android:textAppearance="@style/itemName" />

            <TextView
                android:id="@+id/itemShop"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/font_styrene"
                android:gravity="center"
                android:text="Shop Grak"
                android:textAppearance="@style/itemShop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:fontFamily="@font/font_bruno"
                    android:gravity="center"
                    android:text="IDR "
                    android:textAppearance="@style/itemPrice" />

                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:fontFamily="@font/font_bruno"
                    android:gravity="center"
                    android:text="20.000"
                    android:textAppearance="@style/itemPrice" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>